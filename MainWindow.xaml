<Window x:Class="color_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:color_game"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="450">
    <Grid Background="#121212">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Label x:Name="colorDisplay" Content="Color" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24px" FontFamily="Montserrat" FontWeight="Bold" Foreground="White"></Label>
        <Label x:Name="scoreLabel" Foreground="White"></Label>
        <WrapPanel x:Name="gridBtns" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            
            
        </WrapPanel>

    </Grid>
    
</Window>
